{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/main.tsx",
    "src/App.tsx",
    "src/routes/**/*.tsx",
    "src/components/TauriBrowser.tsx",
    "src/components/DevEventConsole.tsx",
    "src/components/ui/**/*.tsx",
    "src/styles/**/*.css",
    "src/lib/api/**/*.ts",
    "src/lib/utils/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
